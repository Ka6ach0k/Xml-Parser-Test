    <changeSet id="reload-sequences" author="Ivan">
        <sql>
            SELECT setval('groups_group_id_seq', (SELECT MAX(group_id) FROM groups));
            SELECT setval('disciplines_discipline_id_seq', (SELECT MAX(discipline_id) FROM disciplines));
            SELECT setval('students_student_id_seq', (SELECT MAX(student_id) FROM students));
            SELECT setval('schedule_schedule_id_seq', (SELECT MAX(schedule_id) FROM schedule));
        </sql>
        <rollback>
            <sql>
                SELECT setval('groups_group_id_seq', '1');
                SELECT setval('disciplines_discipline_id_seq', '1');
                SELECT setval('students_student_id_seq', '1');
                SELECT setval('schedule_schedule_id_seq', '1');
            </sql>
        </rollback>
    </changeSet>

    <changeSet id="tag-initial-data" author="Ivan">
